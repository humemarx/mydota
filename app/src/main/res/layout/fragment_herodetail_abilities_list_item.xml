<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margins_text"
    android:paddingTop="@dimen/margins_text"
    android:background="#ff1a1a1a">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_abilities"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="@dimen/margins_base"
            android:adjustViewBounds="false"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/text_abilities_dname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_abilities"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/text_abilities_affects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_abilities_dname"
            android:layout_below="@+id/text_abilities_dname"
            android:layout_marginTop="@dimen/margins_text"
            android:text="@string/app_name"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_abilities_dmg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margins_base"
        android:text="@string/app_name"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/text_abilities_attrib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/text_abilities_cmb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/text_abilities_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margins_base"
        android:text="@string/app_name"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/text_abilities_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#ffffffff" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/skill_video"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[收起]"
            android:id="@+id/text_skill_video"
            android:layout_gravity="right|bottom"
            android:textColor="#fffff118"
            android:gravity="right"
            android:textSize="@dimen/abc_text_size_medium_material" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_skill_video"
            android:layout_gravity="left|top"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_skill_v"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_abilities_lore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#ffffffff" />

</LinearLayout>